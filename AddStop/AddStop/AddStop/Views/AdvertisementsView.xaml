<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddStop.Views.AdvertisementsView"
             Title="Advertisements"
             xmlns:viewModel="clr-namespace:AddStop.ViewModels"
             xmlns:controls="clr-namespace:AddStop.CustomControlls">
    <ContentPage.Content>
        <ListView x:Name="listView" SeparatorVisibility="None" HasUnevenRows="true" IsVisible="false" RowHeight="-1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <controls:AdvertisementCell/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>